<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inrix.reference.trafficapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:name="com.inrix.reference.trafficapp.TrafficApp"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.inrix.reference.trafficapp.activity.SplashActivity"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name" 
            android:theme="@style/Theme.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.inrix.reference.trafficapp.activity.MainActivity"
            android:icon="@drawable/ic_launcher"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.inrix.reference.trafficapp.activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.inrix.reference.trafficapp.activity.MainActivity" >
        </activity>
        <activity
            android:name="com.inrix.reference.trafficapp.activity.ReportIncidentActivity"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoTitleBar" />
        <activity
            android:name="com.inrix.reference.trafficapp.activity.MainMapActivity"
            android:theme="@style/MainMapTheme" />
        
        <activity
            android:name="com.inrix.reference.trafficapp.locationpicker.LocationPickerActivity"
            android:theme="@style/TallActionBar"/>
        
        <activity
            android:name="com.inrix.reference.trafficapp.locationpicker.LocationPickerMapActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:noHistory="true" />
        <activity
            android:name="com.inrix.reference.trafficapp.incidents.IncidentsActivity"
            android:theme="@style/AppTheme.Incidents"/>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/map_api_key" />

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        
        <service
            android:name="com.inrix.sdk.activityrecognition.ActivityRecognitionIntentService"
            android:enabled="true"
            android:exported="false"
            android:label="@string/app_name" >
        </service>
        <receiver android:name="com.inrix.reference.trafficapp.NetworkStateReceiver" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>