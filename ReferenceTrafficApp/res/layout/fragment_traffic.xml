<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <FrameLayout
            android:id="@+id/map_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.inrix.reference.trafficapp.view.TrafficStatusPanel
            android:id="@+id/traffic_status_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/places_bottom_edge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/traffic_page_shadow_height"
            android:layout_gravity="bottom"
            android:layout_above="@+id/placesListFragment"
            android:background="@drawable/fading_edge_up" />

        <View
            android:id="@+id/places_top_edge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/traffic_page_shadow_height"
            android:layout_gravity="top"
            android:background="@drawable/fading_edge_down" />

        <View
            android:id="@+id/map_view_window"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:clickable="true" />

        <FrameLayout
            android:id="@+id/placesListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/map_frame"
            android:baselineAligned="false" />
    </RelativeLayout>

</ScrollView>