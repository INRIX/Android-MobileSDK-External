<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/location_list_item_height"
    android:background="@android:color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/location_result_left_margin"
        android:layout_weight=".10"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/location_result_icon_padding"
        android:src="@drawable/building" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight=".70"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="?android:listPreferredItemPaddingLeft" >

        <com.inrix.reference.trafficapp.view.RobotoTextView
            android:id="@+id/title"
            style="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="20sp" />

        <com.inrix.reference.trafficapp.view.RobotoTextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dip"
            android:singleLine="true"
            android:textColor="@color/locations_search_result_background" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/distanceContainer"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight=".20"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingRight="?android:listPreferredItemPaddingLeft" >

        <com.inrix.reference.trafficapp.view.RobotoTextView
            android:id="@+id/distance"
            style="?android:textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true" />

        <com.inrix.reference.trafficapp.view.RobotoTextView
            android:id="@+id/distance_units"
            style="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/miles_label"
            android:textColor="@color/locations_search_result_background" />
    </LinearLayout>

</LinearLayout>