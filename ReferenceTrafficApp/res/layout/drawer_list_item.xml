<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawer_list_item_background"
    android:orientation="horizontal"
    tools:ignore="UseCompoundDrawables" >

    <ImageView
        android:id="@+id/drawer_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/drawer_item_icon_bottom"
        android:layout_marginLeft="@dimen/drawer_item_icon_left"
        android:layout_marginRight="@dimen/drawer_item_icon_right"
        android:layout_marginTop="@dimen/drawer_item_icon_top"
        android:src="@drawable/fake_icon_close_small"
        tools:ignore="ContentDescription" />

    <com.inrix.reference.trafficapp.view.RobotoTextView
        android:id="@+id/drawer_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/drawer_item_text_bottom"
        android:layout_marginLeft="@dimen/drawer_item_text_left"
        android:layout_marginRight="@dimen/drawer_item_text_right"
        android:layout_marginTop="@dimen/drawer_item_text_top"
        android:gravity="center_vertical"
        android:text="@string/drawer_close"
        android:textColor="@color/drawer_text_color"
        android:textSize="@dimen/drawer_item_text_size" />

</LinearLayout>