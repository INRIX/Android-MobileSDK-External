<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <Space
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_weight="@integer/incident_details_space_weight" />

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="@integer/incident_details_content_weight" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/incident_details_content_shadow_height"
            android:layout_above="@+id/item"
            android:background="@drawable/gradient_up" />

        <include layout="@layout/dtw_incidents_details_item"
            android:id="@+id/item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dtw_incident_details_content_height"
            android:layout_above="@+id/buttonBar"
            android:background="@color/incident_details_content_background" />

        <RelativeLayout
            android:id="@+id/buttonBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        	android:background="@color/dtw_incident_details_content_background"
            android:layout_alignParentBottom="true"
            android:paddingLeft="@dimen/dtw_incident_details_description_margin_left" 
            android:paddingRight="@dimen/dtw_incident_details_description_margin_right"
            android:paddingTop="@dimen/dtw_incident_details_buttons_margin_top" 
            android:paddingBottom="@dimen/dtw_incident_details_buttons_margin_bottom" >

            <Button
                android:id="@+id/rerouteButton"
                style="@style/IncidentsDetailsButtonBarButtonStyle"
                android:background="@drawable/dtw_incident_details_button_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/buttonSeparator"
                android:text="@string/reroute"
                android:visibility="gone" />

           <Button
                android:id="@+id/viewButton"
                style="@style/IncidentsDetailsButtonBarButtonStyle"
                android:background="@drawable/dtw_incident_details_button_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/buttonSeparator"
                android:text="@string/view"
                android:visibility="visible" />

            <Space
                android:id="@+id/buttonSeparator"
                android:layout_width="@dimen/incident_details_buttons_separator_width"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <com.inrix.reference.trafficapp.view.SpinnerButton
                android:id="@+id/dismissButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/buttonSeparator"
                android:background="@drawable/incident_details_button_selector"
                android:visibility="visible" />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>