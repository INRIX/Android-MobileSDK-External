<?xml version="1.0" encoding="utf-8"?>
<com.inrix.reference.trafficapp.view.SlidingBarErrorPresenter xmlns:android="http://schemas.android.com/apk/res/android"
    style="?android:attr/buttonBarStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:divider="@drawable/white_divider" >

    <LinearLayout
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight=".8"
        android:gravity="left|center_vertical"
        android:paddingStart="0dip">

        <ImageView
            android:id="@+id/actionClose"
            style="@android:style/Widget.Holo.Button.Borderless.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/close"
            android:paddingBottom="@dimen/error_bar_close_btn_padding"
            android:paddingTop="@dimen/error_bar_close_btn_padding"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_cancel" />

        <com.inrix.reference.trafficapp.view.RobotoTextView
            android:id="@+id/errorText"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/actionButton"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight=".2"
        android:contentDescription="@null"
        android:padding="8dip"
        android:scaleType="fitCenter"/>

</com.inrix.reference.trafficapp.view.SlidingBarErrorPresenter>