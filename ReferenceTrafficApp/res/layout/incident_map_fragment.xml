<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inrix.reference.trafficapp.locationpicker.LocationPickerActivity" >

    <FrameLayout
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <Space
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_weight="@integer/incident_details_space_weight" />

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="@integer/incident_details_content_weight" >

            <LinearLayout
                android:id="@+id/incident_details_wrapper"
                android:layout_width="match_parent"
                android:layout_height="@dimen/incident_details_content_height"
                android:background="@color/incident_details_content_background" >

                <include layout="@layout/incidents_details_item" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/incident_details_content_shadow_height"
                android:layout_below="@+id/incident_details_wrapper"
                android:background="@drawable/gradient_down"
                tools:ignore="UnknownIdInLayout" />

            <include
                android:layout_alignParentBottom="true"
                layout="@layout/incidents_details_button_bar" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>