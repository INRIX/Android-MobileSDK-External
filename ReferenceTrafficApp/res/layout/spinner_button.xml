<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dtw_incident_detail_button_height" >

    <com.inrix.reference.trafficapp.view.RobotoTextView
        android:id="@+id/title"
        style="@style/SpinnerButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:id="@+id/spinner_with_text"
        android:layout_width="@dimen/dtw_incident_detail_button_height"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true" >

        <ProgressBar
            android:id="@+id/spinner"
            style="@android:style/Widget.Holo.ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.inrix.reference.trafficapp.view.RobotoTextView
            android:id="@+id/timer"
            style="@style/SpinnerButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</RelativeLayout>