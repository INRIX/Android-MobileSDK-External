<?xml version="1.0" encoding="UTF-8"?>
<com.inrix.reference.trafficapp.view.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/location_bar_background_color"
    android:paddingBottom="@dimen/about_card_shadow_height"
    android:paddingRight="@dimen/about_card_shadow_width" >

    <RelativeLayout
        style="@style/Card"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="@dimen/about_title_card_padding" >

        <ImageView
            android:id="@+id/logo_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/about_logo_margin_right"
            android:contentDescription="@null"
            android:src="@drawable/about_logo" />

        <com.inrix.reference.trafficapp.view.RobotoTextView
            android:id="@+id/txt_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/logo_icon"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="@dimen/about_version_text_size" />

        <com.inrix.reference.trafficapp.view.RobotoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/logo_icon"
            android:text="@string/powered_by"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="@dimen/about_powered_by_text_size" />
    </RelativeLayout>

</com.inrix.reference.trafficapp.view.ShadowLayout>