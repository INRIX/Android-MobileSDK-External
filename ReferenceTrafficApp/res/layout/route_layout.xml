<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/route_background_color"
    android:orientation="vertical" >

    <View
        android:id="@+id/route_seperator_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/incident_list_item_delimeter_height"
        android:background="@color/route_seperator_color" />

    <LinearLayout
        android:id="@+id/route"
        android:layout_width="match_parent"
        android:layout_height="@dimen/places_list_item_height"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible" >

        <TextView
            android:id="@+id/title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_space"
            android:layout_marginTop="@dimen/small_space"
            android:layout_weight="1"
            android:singleLine="true"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="@dimen/places_list_title_font_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_space"
            android:layout_marginRight="@dimen/small_space"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/eta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/pretripnotification_default_time"
                android:textColor="@android:color/black"
                android:textSize="@dimen/places_list_eta_font_size"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/chevron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/small_space"
                android:gravity="center_vertical"
                android:src="@drawable/arrow_right_shadow"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/route_seperator_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/incident_list_item_delimeter_height"
        android:background="@color/route_seperator_color" />

</LinearLayout>