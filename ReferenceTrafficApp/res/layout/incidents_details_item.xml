<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/incident_details"
    android:background="@color/incident_details_content_background"
    android:paddingBottom="@dimen/incident_details_content_padding_bottom"
    android:paddingLeft="@dimen/incident_details_content_padding_left"
    android:paddingRight="@dimen/incident_details_content_padding_right"
    android:paddingTop="@dimen/incident_details_content_padding_top" >

    <View
        android:id="@+id/arrowLeft"
        android:layout_width="@dimen/incident_details_left_indicator_width"
        android:layout_height="@dimen/incident_details_left_indicator_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/arrow_left"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/incident_details_icon_width"
        android:layout_height="@dimen/incident_details_icon_height"
        android:layout_marginRight="12dip"
        android:layout_toRightOf="@+id/arrowLeft"
        android:contentDescription="@null"
        android:scaleType="fitCenter" />

    <ScrollView
        android:id="@+id/description_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/info_bar"
        android:layout_alignTop="@+id/icon"
        android:layout_toLeftOf="@+id/arrowRight"
        android:layout_toRightOf="@+id/icon"
        android:fadingEdgeLength="0dp"
        android:overScrollMode="never" >

        <com.inrix.reference.trafficapp.view.RobotoTextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/incident_details_description_margin_bottom"
            android:layout_marginLeft="@dimen/incident_details_description_margin_left"
            android:layout_marginRight="@dimen/incident_details_description_margin_right"
            android:layout_marginTop="@dimen/incident_details_description_margin_top"
            android:textSize="@dimen/incident_details_description_text_size" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/info_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/arrowRight"
        android:layout_toRightOf="@+id/icon"
        android:orientation="horizontal" >

        <com.inrix.reference.trafficapp.view.RobotoTextView
            android:id="@+id/distance"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:textSize="@dimen/incident_details_distance_text_size" />

        <com.inrix.reference.trafficapp.view.RobotoTextView
            android:id="@+id/reported_time"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:textSize="@dimen/incident_details_reported_time_text_size" />
    </LinearLayout>

    <View
        android:id="@+id/arrowRight"
        android:layout_width="@dimen/incident_details_right_indicator_width"
        android:layout_height="@dimen/incident_details_right_indicator_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/arrow_right"
        android:visibility="gone" />

</RelativeLayout>