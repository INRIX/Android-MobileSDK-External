<?xml version="1.0" encoding="utf-8"?>
<com.inrix.reference.trafficapp.locationpicker.SlidingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/locations_search_list_background"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/list_separator_height"
        android:drawSelectorOnTop="true"
        android:listSelector="@drawable/selectable_item_background"
        android:padding="@dimen/list_padding"
        android:scrollbarStyle="outsideOverlay" />

    <LinearLayout
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/location_list_empty_item_height"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/empty_image"
            android:layout_width="@dimen/location_list_smiley_width_height"
            android:layout_height="@dimen/location_list_smiley_width_height"
            android:src="@drawable/frown" 
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/no_results"/>

        <com.inrix.reference.trafficapp.view.RobotoTextView
            android:id="@+id/empty_text"
            style="@style/CardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity= "center"
            android:text="@string/no_results"
            android:textSize="@dimen/empty_search_text_size" />
    </LinearLayout>

</com.inrix.reference.trafficapp.locationpicker.SlidingRelativeLayout>