<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget.MapControlButton" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:padding">@dimen/map_button_padding</item>
    </style>

    <style name="Card" parent="@android:style/Widget">
        <item name="android:paddingLeft">@dimen/card_padding_left</item>
        <item name="android:paddingRight">@dimen/card_padding_right</item>
        <item name="android:paddingTop">@dimen/card_padding_top</item>
        <item name="android:paddingBottom">@dimen/card_padding_bottom</item>
        <item name="android:background">@color/card_background_color</item>
        <item name="android:layout_height">@dimen/card_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="CardThumbnail" parent="@android:style/Widget">
        <item name="android:layout_width">@dimen/card_thumbnail_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/card_thumbnail_background</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="CardTitle" parent="@android:style/Widget.Holo.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Medium</item>
        <item name="android:textColor">@color/card_title_text_color</item>
        <item name="android:textSize">@dimen/card_title_text_size</item>
        <item name="android:layout_marginLeft">@dimen/card_title_margin_left</item>
        <item name="android:layout_marginRight">@dimen/card_title_margin_right</item>
        <item name="android:lines">2</item>
        <item name="android:maxLines">2</item>
        <item name="robotoFont">condensed</item>
    </style>

    <style name="CardSubtitle" parent="@android:style/Widget.Holo.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Small</item>
        <item name="android:textColor">@color/card_subtitle_text_color</item>
        <item name="android:textSize">@dimen/card_subtitle_text_size</item>
        <item name="android:layout_marginLeft">@dimen/card_subtitle_margin_left</item>
        <item name="android:layout_marginRight">@dimen/card_subtitle_margin_right</item>
        <item name="android:singleLine">true</item>
        <item name="robotoFont">condensed</item>
    </style>

    <style name="CardIcon" parent="@android:style/Widget"></style>

    <style name="CardChevron">
        <item name="android:background">@drawable/card_chevron</item>
        <item name="android:layout_width">@dimen/card_chevron_width</item>
        <item name="android:layout_height">@dimen/card_chevron_height</item>
        <item name="android:translationX">@dimen/card_padding_left</item>
        <item name="android:translationY">@dimen/card_padding_left</item>
    </style>

    <style name="CardThumbnail.Incidents">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="CardTitle.Route">
        <item name="android:textSize">@dimen/route_title_font_size</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="robotoFont">bold_condensed</item>
    </style>

    <style name="Card.Error">
        <item name="android:layout_margin">@dimen/error_card_margin</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/action_bar_background</item>
        <item name="android:icon">@drawable/station_logo</item>
    </style>

    <style name="IncidentsDetailsButtonBarButtonStyle">
        <item name="android:background">@drawable/incident_details_button_selector</item>
        <item name="android:textColor">@color/incident_details_button_text_color</item>
        <item name="android:textSize">@dimen/incident_detail_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/incident_detail_button_padding</item>
    </style>

    <style name="SpinnerButtonStyle">
        <item name="android:textColor">@color/incident_details_button_text_color</item>
        <item name="android:textSize">@dimen/incident_detail_button_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DtwTextStyle">
        <item name="android:textColor">@color/dtw_details_text_color</item>
        <item name="android:textSize">@dimen/dtw_incident_details_reported_time_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CoallescedIcon.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/incident_details_button_selector</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="ActionModeNoCloseButton" parent="@android:style/Widget.ActionButton.CloseMode">
        <item name="android:visibility">invisible</item>
    </style>

    <style name="TallActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:height">90dp</item>
    </style>

    <style name="TallActionBar" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/TallActionBarStyle</item>
    </style>

    <style name="MapBubbleTextStyle" parent="android:TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ff1f1f1f</item>
    </style>

    <style name="AboutTitleTextStyle" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#505050</item>
        <item name="android:paddingTop">@dimen/about_text_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/about_text_padding_vertical</item>
    </style>

</resources>