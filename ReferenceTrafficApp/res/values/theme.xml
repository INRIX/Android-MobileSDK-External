<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@color/news_page_background</item>
        <item name="android:selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        
        <!-- Card style references -->
        <item name="cardStyle">@style/Card</item>
        <item name="cardThumbnailStyle">@style/CardThumbnail</item>
        <item name="cardTitleStyle">@style/CardTitle</item>
        <item name="cardSubtitleStyle">@style/CardSubtitle</item>
        <item name="cardIconStyle">@style/CardIcon</item>
        <item name="cardChevronStyle">@style/CardChevron</item>
    </style>

    <style name="Theme.Splash" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        	<item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="AppTheme.NoTitleBar" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="AppTheme.Incidents" parent="AppTheme">
        <item name="cardThumbnailStyle">@style/CardThumbnail.Incidents</item>
    </style>
    
    <style name="MainMapTheme" parent="AppTheme">
        <item name="android:actionModeCloseButtonStyle">@style/ActionModeNoCloseButton</item>
        <item name="android:actionModeBackground">@drawable/incident_details_cab_background</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>