<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inrix.sample.fragments.TripsCreateFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trips_activity_title"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textViewOrigin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/trips_padding"
                android:text="@string/trips_activity_origin" />

            <TextView
                android:id="@+id/textViewHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/trips_padding"
                android:text="@string/trips_activity_home"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <CheckBox
                android:id="@+id/checkBoxWaypoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trips_activity_waypoint" />

            <TextView
                android:id="@+id/textViewDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/trips_padding"
                android:text="@string/trips_activity_destination" />

            <TextView
                android:id="@+id/textViewWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trips_activity_work"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@+id/radioButtonOneTime"
                android:orientation="vertical"
                android:paddingBottom="@dimen/trips_padding"
                android:paddingTop="@dimen/trips_padding">

                <RadioButton
                    android:id="@+id/radioButtonOneTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trips_activity_one_time" />

                <RadioButton
                    android:id="@+id/radioButtonRecurring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trips_activity_recurring" />

            </RadioGroup>

            <CheckBox
                android:id="@+id/checkBoxAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trips_activity_alert" />

            <Button
                android:id="@+id/save_trip_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/trips_padding"
                android:text="@string/trips_button" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
