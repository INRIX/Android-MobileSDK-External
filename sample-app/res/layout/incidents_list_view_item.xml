<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/incident_list_item_height"
    android:background="#242525" >

    <ImageView
        android:id="@+id/incident_icon"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/control_horizontal_margin"
        android:scaleType="fitXY"
        android:src="@drawable/accident" />

    <TextView
        android:id="@+id/incident_description"
        style="@style/list_view_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/control_horizontal_margin"
        android:layout_marginRight="@dimen/control_horizontal_margin"
        android:layout_marginTop="@dimen/control_vertical_margin"
        android:layout_toRightOf="@+id/incident_icon"
        android:lines="3" />

    <TextView
        android:id="@+id/header1"
        style="@style/list_view_text_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/incident_description"
        android:layout_below="@+id/incident_description"
        android:singleLine="true" />

    <TextView
        android:id="@+id/incident_delay"
        style="@style/list_view_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/header1"
        android:layout_marginRight="@dimen/control_horizontal_margin"
        android:layout_toRightOf="@+id/header1"
        android:ellipsize="end"
        android:singleLine="true" />

    <TextView
        android:id="@+id/header2"
        style="@style/list_view_text_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/incident_description"
        android:layout_below="@+id/header1"
        android:singleLine="true" />

    <TextView
        android:id="@+id/incident_back_up"
        style="@style/list_view_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/header2"
        android:layout_marginRight="@dimen/control_horizontal_margin"
        android:layout_toRightOf="@+id/header2"
        android:ellipsize="end"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:layout_marginLeft="@dimen/control_horizontal_margin"
        android:src="@drawable/bottom_logo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/incident_list_item_delimeter_height"
        android:layout_alignParentBottom="true"
        android:background="#222222" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/incident_list_item_delimeter_height"
        android:layout_alignParentTop="true"
        android:background="#4f4f4f" />

</RelativeLayout>