<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginTop="8dp"
             android:orientation="vertical">

    <TableRow style="@style/ParkingBlock.Content.Row">

        <TextView
            style="@style/ParkingBlock.Content.Cell.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/parking_block_section_capacity"/>

        <TextView
            android:id="@+id/parking_block_section_capacity"
            style="@style/ParkingBlock.Content.Cell.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow style="@style/ParkingBlock.Content.Row">

        <TextView
            style="@style/ParkingBlock.Content.Cell.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/parking_block_section_side"/>

        <TextView
            android:id="@+id/parking_block_section_side"
            style="@style/ParkingBlock.Content.Cell.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow style="@style/ParkingBlock.Content.Row">

        <TextView
            style="@style/ParkingBlock.Content.Cell.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/parking_block_section_zone"/>

        <TextView
            android:id="@+id/parking_block_section_zone"
            style="@style/ParkingBlock.Content.Cell.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow
        style="@style/ParkingBlock.Content.Row"
        android:paddingRight="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/parking_block_section_pricing_title"
                style="@style/ParkingBlock.Content.Cell.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/parking_block_section_pricing"/>

            <com.inrix.sample.view.BulletListView
                android:id="@+id/parking_block_section_pricing_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                tools:ignore="RtlHardcoded"/>
        </LinearLayout>
    </TableRow>

    <TableRow
        style="@style/ParkingBlock.Content.Row"
        android:paddingRight="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/parking_block_section_restrictions_title"
                style="@style/ParkingBlock.Content.Cell.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/parking_block_section_restrictions"/>

            <com.inrix.sample.view.BulletListView
                android:id="@+id/parking_block_section_restrictions_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                tools:ignore="RtlHardcoded"/>
        </LinearLayout>
    </TableRow>

</TableLayout>